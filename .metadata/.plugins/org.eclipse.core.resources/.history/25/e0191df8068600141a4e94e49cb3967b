var bgImage2 = ['rectangle_1.png'];

var newWin = function(){
	var win2 = Ti.UI.createWindow({
			backgroundImage: 'backgroundimage/' + bgImage2
		});
		
		var label2 = Ti.UI.createLabel({
			top : 10,
			text: 'Create your Story'
			font: {fontSize:22, fontFamily: 'Cooper Black'},
			color: '#f0f6f4',
		});
		
		var textField1 = Ti.UI.createTextField({
			height : 35,
			top : 40,
			left : 40,
			width : 240,
			hintText : 'First Name',
			keyboardType : Ti.UI.KEYBOARD_DEFAULT,
			returnKeyType : Ti.UI.RETURNKEY_DEFAULT,
			borderStyle : Ti.UI.INPUT_BORDERSTYLE_ROUNDED
		});
		aTextField.addEventListener('return', function(e) {
			aTextField.blur();
			alert('Input was: ' + aTextField.value);
		});
		win2.add(textField1, label2);
		
		
		nav.openWindow(win2);
};

exports.inputWin = newWin;
